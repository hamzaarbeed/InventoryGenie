@model List<Employee>

<form method="post" asp-controller="User" asp-action="Search">
    <input class="form-control col-3" type="text" name="searchText">
    <button class="btn btn-primary" type="submit">Search</button>
    <a class="btn btn-primary" asp-controller="User" asp-action="Add">Add New Employee</a>
</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <th>@employee.Id</th>
                <th>@employee.FirstName</th>
                <th>@employee.LastName</th>
                <th>@employee.UserName</th>
                <th>@employee.Role.RoleName</th>

                <th>
                    <a asp-controller="User" asp-action="Edit" asp-route-id=@employee.Id>Edit</a>
                    <a asp-controller="User" asp-action="Delete" asp-route-id=@employee.Id>Delete</a>
                </th>

            </tr>

        }
    </tbody>

</table>