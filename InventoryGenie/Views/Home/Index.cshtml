@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hi @Employee.employee.FirstName @Employee.employee.LastName!</h1>
    <h6 class="mb-5">(@Employee.employee.Role.ToString().Replace("_"," "))</h6>
    @{
        if ((int)Employee.employee.Role != 3)
        {
            <div>@ViewBag.stockoutCount stockouts </div>
            <div>@ViewBag.lowstockCount low stocks</div>
        }
    }
</div>
