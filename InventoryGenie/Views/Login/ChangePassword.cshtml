@model Employee
@{
    ViewData["Title"] = "Login";
}


<h2 class="mb-2">Change your old password.</h2>
<h2 class="mb-2">@ViewBag.Title</h2>

<form method="post" asp-action="ChangePassword">
    <div class="mb-3">
        <label class="form-label">User Name</label>
        <!--Username can't be changed-->
        <input disabled asp-for="UserName" class="form-control">
    </div>
    <div>
        <!--EmployeeID is hidden to be posted back inside employee object-->
        <input hidden type="number" asp-for="EmployeeID" class="form-control">
    </div>

    <!--New Password and Confirm New Password-->
    <div class="mb-3">
        <label class="form-label">New Password</label>
        <input name="newPassword" type="password" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Confirm New Password</label>
        <input name="confirmedNewPassword" type="password" class="form-control">
    </div>
    @{
        // if Msg bag is not null then there is something wrong such as new password the same as old password,
        //  new password and confirmed new password don't match

        if (ViewBag.Msg != null)
        {
            <div class="mb-3">
                <label class="text-danger">@ViewBag.Msg</label>
            </div>
        }
    }
    <button type="submit" class="btn btn-primary">Login</button>
</form>