@model User
@{
    ViewData["Title"] = "Login";
}


<h2 class="mb-2">Welcome to Inventory Genie! Please enter your username and password.</h2>
<h2 class="mb-2">@ViewBag.Title</h2>
<form method="post" asp-action="Index">
    <div class="mb-3">
        <label asp-for="UserName" class="form-label">User Name</label>
        <input asp-for="UserName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control">
    </div>
    @{
        try{
            if(ViewBag.Msg !=null){
                <div class="mb-3">
                    <label class="text-danger">@ViewBag.Msg</label>
                </div>
            }
        }
        catch
        {
            
        }
    }
    <button type="submit" class="btn btn-primary">Login</button>
</form>