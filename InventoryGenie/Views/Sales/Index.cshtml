@model List<Product>

<form method="post" asp-controller="Sales" asp-action="Index">
    <input class="form-control col-3" type="text" name="searchText">

    <select name="sortBy" class="form-select">
        @foreach (string columnName in ViewBag.SortByOptions)
        {
            <option value=@columnName>@columnName</option>
        }
    </select>
    <button class="btn btn-primary" type="submit">Search</button>
    <a class="btn btn-primary float-end" asp-controller="Sales" asp-action="ViewCart">Cart</a>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Supplier</th>

            <th>Shelf Price</th>
            <th>Transaction Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>@product.ProductID</th>
                <th>@product.Name</th>
                <th>@product.Description</th>
                <th>@product.Category.Name</th>
                <th>@product.Supplier.SupplierName</th>
                <th>@product.ShelfPrice</th>
                <th>
                    <form method="post" asp-controller="Sales" asp-action="AddToCart">
                        <input type="number" name ="quantityToBeAddedToCart" value=1>
                        <input type="number" hidden name="productID" value=@product.ProductID>
                        <button class="btn btn-outline-primary" type="submit">Add to Cart</button>
                    </form>
                </th>

            </tr>

        }
    </tbody>

</table>


