@model Tuple<List<Product>,Dictionary<int,int>>

<form method="post" asp-controller="Sales" asp-action="Index">
   
    <label>Search Product:</label><br>
    <input class="form-control col-3" type="text" name="searchText" value="@ViewBag.SearchText"><br />

    <label>Sort Product by:</label><br>
    <select name="sortBy" class="form-select">
        @foreach (string columnName in ViewBag.SortByOptions)
        {
            if (ViewBag.SortBy == columnName)
            {
                <option selected value=@columnName>@columnName</option>
            }
            else
            {
                <option value=@columnName>@columnName</option>
            }
        }
    </select><br />
    <button class="btn btn-primary" type="submit">Search</button>

    <a class="btn btn-primary float-end m-2" asp-controller="Sales" asp-action="ViewCart">Cart @Model.Item2.Sum(x=>x.Value)</a>
    <a class="btn btn-primary float-end m-2" asp-controller="Sales" asp-action="ClearCart">Clear Cart</a>
    
</form><br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Supplier</th>
            <th>Shelf Price</th>
            <th>Transaction Quantity</th>
            <th>Items in Cart</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Item1)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Category.Name</td>
                <td>@product.Supplier.SupplierName</td>
                <td>@product.ShelfPrice</td>
                <td>
                    <form method="post" asp-controller="Sales" asp-action="AddToCart">
                        <input type="number" name="quantityToBeAddedToCart" min="0" oninput="validity.valid||(value='');" value=1>
                        <input type="number" hidden name="productID" value=@product.ProductID>
                        <button class="btn btn-outline-primary" type="submit">Add to Cart</button>
                    </form>
                </td>
                <td>
                    @Model.Item2.GetValueOrDefault(product.ProductID)
                </td>
            </tr>

        }
    </tbody>

</table>


