@{
    if (Employee.LoggedInEmployee != null)
    {
        ViewBag.Role = Employee.LoggedInEmployee.RoleId;
    }
    else
    {
        ViewBag.Role = 0;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory Genie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryGenie.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css" integrity="sha-long-hash_code" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <i class="fa-sharp fa-solid fa-database"></i><a class="navbar-brand  fa fa-regular" asp-area="" asp-controller="Home" asp-action="Index">&nbsp;&nbsp;Inventory Genie</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (ViewBag.Role == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Employees</a>
                            </li>
                        }
                        @if (ViewBag.Role == 1 || ViewBag.Role == 2)
                        {
                            <li class="nav-item">

                                <a class="nav-link text-dark" asp-area="" asp-controller="Supplier" asp-action="Index">Suppliers</a>
                            </li>
                        }
                        @if (ViewBag.Role == 1 || ViewBag.Role == 2)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                            </li>
                        }
                        @if (ViewBag.Role == 1 || ViewBag.Role == 2 || ViewBag.Role == 3)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Stock" asp-action="Index">Stocks</a>
                            </li>
                        }
                        @if (ViewBag.Role == 1 || ViewBag.Role == 2)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reporting" asp-action="Index">Reports</a>
                            </li>
                        }
                        @if (ViewBag.Role == 1 || ViewBag.Role == 2 || ViewBag.Role == 3)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sales" asp-action="Index">Sales</a>
                            </li>
                        }
                        @if (ViewBag.Role == 1 || ViewBag.Role == 2)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">Orders</a>
                            </li>
                        }
                    </ul>
                </div>
                @if (ViewBag.Role != 0)
                {
                    <a class="btn btn-outline-primary fa-solid fa-text" asp-area="" asp-controller="Login" asp-action="LogOut">Log Out&nbsp;<i class="fa fa-sign-out"></i></a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - InventoryGenie
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
