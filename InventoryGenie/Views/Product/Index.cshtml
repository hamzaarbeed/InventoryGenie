@model List<Product>

<form method="post" asp-controller="Product" asp-action="Search">
    <input class="form-control col-3" type="text" name="searchText">

    <select name="sortBy" class="form-select">
        @foreach (string columnName in ViewBag.SortByOptions)
        {
            <option value=@columnName>@columnName</option>
        }
    </select>
    <button class="btn btn-primary" type="submit">Search</button>
    <a class="btn btn-primary" asp-controller="Product" asp-action="Add">Add New Product</a>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>@product.ProductID</th>
                <th>@product.Name</th>
                <th>@product.Description</th>
                <th>@product.Category.Name</th>

                <th>
                    <a asp-controller="Product" asp-action="Details" asp-route-id=@product.ProductID>Details</a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id=@product.ProductID>Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id=@product.ProductID>Delete</a>
                </th>

            </tr>

        }
    </tbody>

</table>


